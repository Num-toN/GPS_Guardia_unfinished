{
  "name": "guardia",
  "version": "1.0.0",
  "main": "App.tsx",
  "dependencies": {
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/stack": "^6.4.1",
    "dotenv": "^16.4.5",
    "expo-location": "^18.0.2",
